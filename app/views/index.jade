extends layout

block content
  body(ng-controller='ApplicationCtrl as my_app')
    nav(class="nav navbar-default")
      div(class="container")
        ul(class="nav navbar-nav")
          li
            a(href='/articles') Articles
          li
            a(href='/register') Register
          li
            a(href='/login') Login
        p(ng-if='my_app.currentUser' class='navbar-text navbar-right')
          span Signed in as {{my_app.currentUser.username}}
  div(class='container' ng-view)

